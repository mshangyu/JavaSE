

public class JoinDemo {
	public static void main(String[] args) {
		Join j=new Join();
		
		Thread t1=new Thread(j,"¹ØÓğ");
		Thread t2=new Thread(j,"ÕÅ·É");
		
		t1.start();
		t2.start();
		
		for (int x = 0; x < 10; x++) {
			System.out.println(Thread.currentThread().getName()+"---"+x);
		}
	}

}
class Join implements Runnable{

	@Override
	public void run() {
		for(int x=0;x<100;x++){
			System.out.println(Thread.currentThread().getName()+"---"+x);
		}
		
	}
	
}