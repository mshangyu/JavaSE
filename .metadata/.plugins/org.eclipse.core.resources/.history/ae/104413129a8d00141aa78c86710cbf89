package IO流;

import java.io.FileReader;
import java.io.FileWriter;

public class CopyFileDemo加入异常 {
	public static void main(String[] args) {
		// 封装数据源
		FileReader fr = new FileReader("IODemo.java");
		// 封装目的地
		FileWriter fw = new FileWriter("d:\\Copy.java");

		// 读取数据并且写出数据
		int ch = 0;
		while ((ch = fr.read()) != -1) {
			fw.write(ch);
		}

		// 释放资源
		fw.close();
		fr.close();

	}

}
