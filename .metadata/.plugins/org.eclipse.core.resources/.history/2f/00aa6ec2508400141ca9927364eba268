
public class ArrMax {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr={12,34,435,6577,7657,78};
		//找一个参照物
		int max=arr[0];
		for(int x=1;x<arr.length;x++){
			if(arr[x]>max){
				max=arr[x];
			}
		}
		System.out.println(max);
		
		int min=arr[0];
		for(int i=1;i<arr.length;i--){
			min=arr[i];
		}
	}

}
