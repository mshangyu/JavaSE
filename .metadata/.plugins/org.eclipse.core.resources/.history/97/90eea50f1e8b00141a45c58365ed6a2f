
/*
 * Thread:线程类 线程有自己的任务 在定义线程类的时候 需要实现：？run（）
 * 一、继承Thread类来创建：
 * 1、继承
 * 2、复写run（）：任务  //子类
 * 3、实例化:线程对象
 * 4、启动线程：start
 * */


public class Fights {
	public static void main(String[] args) {
		Monkey2 m1=new Monkey2("第一个孙悟空");
		Monkey2 m2=new Monkey2("第二个孙悟空");
		Monkey2 m3=new Monkey2("第三个孙悟空");
		
		m1.fight();
		m2.fight();
		m3.fight();
		
		System.out.println();

	}

}
class Monkey2{
	String name;
	public Monkey2(String name){
		super();
		this.name=name;
		
	}
	
	public void fight(){
		for (int i = 1; i < 11; i++) {
			System.out.println(name+"打败第"+i+"个天兵");
		}
	}
}