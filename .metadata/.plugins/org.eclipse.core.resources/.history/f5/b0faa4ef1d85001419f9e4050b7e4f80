import java.util.Scanner;


public class Chang {
	public static void main(String[] args) {
		Scanner hhScanner=new Scanner(System.in);
		System.out.println("请输入长方形的长");
		int a=hhScanner.nextInt();
		System.out.println("请输入长方形的宽");
		int b=hhScanner.nextInt();
		
		ChangFang bb=new ChangFang();
		System.out.println(bb.getMian(a, b));
		System.out.println(bb.getZhou(a, b));
	}

}
class ChangFang{
	public int getMian(int width,int length){
		return width*length;
		
	}
	public int getZhou(int width,int length){
		return (width+length)*2;
	}
}