package char_stream;

import java.io.FileWriter;
import java.io.IOException;

/*File 对象
 * 流对象：  操作文件内容
 * 
 * */
public class FileWriterDemo {
	public static void main(String[] args) throws IOException {
		FileWriter fw=new FileWriter("new.txt");
		//写入缓冲区
		fw.write("hello\r\n");
		//假如文件已经存在 ：write追加操作
		fw.write("world\r\n");
		fw.write("java\r\n");
		
		fw.flush();
		
		
		//释放资源
		fw.close();

	}

}
